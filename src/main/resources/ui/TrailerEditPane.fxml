<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="organization.ui.trailer.TrailerEditController"
      spacing="10">


    <!-- Formularz (scroll) -->
    <ScrollPane fitToWidth="true"
                VBox.vgrow="ALWAYS">

        <GridPane hgap="10"
                  vgap="10"
                  style="-fx-padding: 10 15 10 15;">

            <columnConstraints>
                <ColumnConstraints minWidth="130"
                                   prefWidth="130"
                                   maxWidth="150"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>


            <Label text="Wybierz przyczepę"/>
            <ComboBox fx:id="trailerSelector"
                      GridPane.columnIndex="1"/>

            <Label text="Nr przyczepy" GridPane.rowIndex="1"/>
            <TextField fx:id="nameField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Nr rejestracyjny" GridPane.rowIndex="2"/>
            <TextField fx:id="plateField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Cena / 4h" GridPane.rowIndex="3"/>
            <TextField fx:id="price4h" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="Cena / 24h" GridPane.rowIndex="4"/>
            <TextField fx:id="price24h" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            <Label text="Szerokość (cm)" GridPane.rowIndex="5"/>
            <TextField fx:id="widthField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

            <Label text="Długość (cm)" GridPane.rowIndex="6"/>
            <TextField fx:id="lengthField" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

            <Label text="Wysokość (cm)" GridPane.rowIndex="7"/>
            <TextField fx:id="heightField" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

            <Label text="Resor" GridPane.rowIndex="8"/>
            <ComboBox fx:id="resor"
                      GridPane.rowIndex="8"
                      GridPane.columnIndex="1"/>

            <Label text="Koło zap." GridPane.rowIndex="9"/>
            <ComboBox fx:id="wheel"
                      GridPane.rowIndex="9"
                      GridPane.columnIndex="1"/>

            <Label text="Oś" GridPane.rowIndex="10"/>
            <ComboBox fx:id="axleCount"
                      GridPane.rowIndex="10"
                      GridPane.columnIndex="1"/>


            <Label text="Uwagi" GridPane.rowIndex="11"/>
            <TextField fx:id="notesArea" GridPane.rowIndex="11" GridPane.columnIndex="1"/>

        </GridPane>

    </ScrollPane>


    <!-- Przyciski -->
    <HBox spacing="10"
          alignment="CENTER_RIGHT">

        <Button fx:id="saveTrailerButton"
                text="Zapisz"/>

        <Button fx:id="deleteTrailerButton"
                text="Usuń"
                disable="true"/>

        <Button fx:id="cancelButton"
                text="Anuluj"/>

    </HBox>

</VBox>
